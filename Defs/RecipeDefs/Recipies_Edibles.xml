<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>SE_MakeEdible</defName>
		<label>make edible</label>
		<description>Make an edible out of cooked smokeleaf and chocolate.</description>
		
		<descriptionHyperlinks>
			<ThingDef>SE_Edible</ThingDef>
			<ThingDef>Chocolate</ThingDef>
			<ThingDef>SE_CookedSmokeleaf</ThingDef>
		</descriptionHyperlinks>
		
		<jobString>Making an edible.</jobString>
		<workSkill>Cooking</workSkill>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<workAmount>1000</workAmount>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		
		<recipeUsers>
		<li>ElectricStove</li>
		<li>FueledStove</li>
		<li>DrubLab</li>
		</recipeUsers>
		
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>SE_CookedSmokeleaf</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Chocolate</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		
		<fixedIngredientFilter>			
			<thingDefs>
				<li>SE_CookedSmokeleaf</li>
				
			</thingDefs>
<!--		<categories>
				
			</categories> -->
		</fixedIngredientFilter>
		
		<defaultIngredientFilter>			
			<thingDefs>
				<li>SE_CookedSmokeleaf</li>
			</thingDefs>
	<!--	<categories>
				
			</categories> -->
		</defaultIngredientFilter>
		
		<products>
			<SE_Edible>5<SE_Edible>
		</products>
	</RecipeDef>
</Defs>